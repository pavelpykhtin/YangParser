grammar YANG;
leafNode              : 'leaf' name '{' properties '}' ;
properties            : ( property )* ;
property              : ( simpleProperty | complexProperty ) ;

simpleProperty        : name ( literalValue | quotedValue ) ';' ; 
complexProperty       : name literalValue '{' properties '}' ;

literalValue          : WORD ;
quotedValue           : '"' .* '"' ;

name                  : WORD ;

WORD                  : ( LOWERCASE | UPPERCASE | DIGIT | ALLOWED_SYMBOLS )+ ;
LOWERCASE             : [a-z] ;
UPPERCASE             : [A-Z] ;
DIGIT                 : [0-9] ;
ALLOWED_SYMBOLS       : '_'   ;